<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Admin Panel - Users</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      margin: 0;
      padding: 0;
    }

    .navbar {
      background-color: #003366;
    }

    .navbar-brand {
      font-size: 1.6rem;
      font-weight: bold;
      color: white !important;
    }

    .navbar-nav {
      margin-left: auto;
    }

    main {
      padding: 20px;
    }

    .table-container {
      background-color: white;
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table th, table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    table th {
      background-color: #003366;
      color: white;
    }

    .btn {
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      width: 80px;
      background-color: #003366;
      transition: background-color 0.3s;
    }

    .btn-form {
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: white;
      margin-top: 10px;
      width: 80px;
      background-color: #003366;
      transition: background-color 0.3s;
    }

    .btn-form:hover {
      background-color: #0055cc;
    }

    .add-user-btn {
      font-size: 20px;
      cursor: pointer;
      border: none;
      background: none;
      color: #003366;
      margin-bottom: 20px;
      transition: color 0.3s;
    }

    .add-user-btn:hover {
      color: #0055cc;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      border-radius: 2px;
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      width: 600px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .modal input {
      width: 90%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ced4da;
    }

    .modal select {
      width: 95%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ced4da;
    }

    .modal-content form .btn{
        margin-top: 10px;
    }


    footer {
      background-color: #003366;
      color: white;
      text-align: center;
      padding: 10px;
      margin-top: 20px;
    }

    .logout-link {
      color: white;
      font-size: 14px;
      text-decoration: none;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background 0.3s;
    }

    .logout-link:hover {
      font-weight: bold;
      background-color: #ddd !important;
      color: #003366 !important;
      cursor: p;
    }

  </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand" href="#">Admin Panel - Autoshop.ba</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item"><a class="nav-link" href="/admin/homepage">Home</a></li>
              <li class="nav-item"><a class="nav-link active" href="/admin/users">Users</a></li>
              <li class="nav-item"><a class="nav-link " href="/admin/ads">Ads</a></li>
              <li class="nav-item"><a class="nav-link " href="/admin/reports">Reports</a></li>
              <li class="nav-item"><a class="btn logout-link " href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </nav>

<main>
  <section class="table-container">
    <h3>Users List <button class="add-user-btn" onclick="openModal()">➕</button></h3>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Username</th>
          <th>Role</th>
          <th>Birth Date</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].id %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].username %></td>
          <td><%= users[i].role %></td>
          <td><%= new Date(users[i].birth_date).toLocaleDateString('en-GB') %></td>
          <td><%= users[i].blocked ? 'Blocked' : 'Active' %></td>
          <td>
            <% if (users[i].blocked) { %>
              <button class="btn" onclick="confirmAction('unblock', '<%= users[i].id %>')">Unblock</button>
            <% } else { %>
              <button class="btn" onclick="confirmAction('block', '<%= users[i].id %>')">Block</button>
            <% } %>
            <button class="btn" onclick="confirmAction('delete', '<%= users[i].id %>')">Delete</button>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </section>
</main>

<div id="userModal" class="modal">
  <div class="modal-content">
    <h3>Add New User</h3>
    <form action="/admin/create" method="POST">
      <input type="text" name="email" placeholder="Email" required><br>
      <input type="text" name="username" placeholder="Username" required><br>
      <input type="password" name="password" placeholder="Password" required><br>
      <select name="role" required>
        <option value="seller">Seller</option>
        <option value="buyer">Buyer</option>
      </select><br>
      <input type="date" name="birth_date" required><br>
      <button class="btn-form" type="submit">Add User</button>
    </form>
    <button class="btn-form" onclick="closeModal()">Close</button>
  </div>
</div>

<footer>
  <p>&copy; 2025 Admin Panel. Powered by Babačić Emir</p>
</footer>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  function openModal() {
    document.getElementById('userModal').style.display = 'flex';
  }

  function closeModal() {
    document.getElementById('userModal').style.display = 'none';
  }

  function confirmAction(action, userId) {
    const message = action === 'delete' ? 'Are you sure you want to delete this user?' :
                    action === 'block' ? 'Are you sure you want to block this user?' :
                    'Are you sure you want to unblock this user?';

    if (confirm(message)) {
      if (action === 'delete') {
        deleteUser(userId);
      } else if (action === 'block') {
        blockUser(userId);
      } else if (action === 'unblock') {
        unblockUser(userId);
      }
    }
  }

  function blockUser(userId) {
    if (confirm("Are you sure you want to block this user?")) {
      $.ajax({
        url: `/admin/block/${userId}`,
        type: "PUT",
        success: function () {
          alert("User blocked successfully!");
          location.reload();
        },
        error: function () {
          alert("Failed to block user.");
        },
      });
    }
  }

  function unblockUser(userId) {
    if (confirm("Are you sure you want to unblock this user?")) {
      $.ajax({
        url: `/admin/unblock/${userId}`,
        type: "PUT",
        success: function () {
          alert("User unblocked successfully!");
          location.reload();
        },
        error: function () {
          alert("Failed to unblock user.");
        },
      });
    }
  }

  function deleteUser(userId) {
    if (confirm("Are you sure you want to delete this user?")) {
      $.ajax({
        url: `/admin/delete/${userId}`,
        type: "DELETE",
        success: function () {
          alert("User deleted successfully!");
          location.reload();
        },
        error: function () {
          alert("Failed to delete user.");
        },
      });
    }
  }
</script>

</body>
</html>




