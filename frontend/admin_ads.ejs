<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
    }

    .navbar {
      background-color: #003366;
    }

    .navbar-brand {
      font-size: 1.6rem;
      font-weight: bold;
      color: white !important;
    }

    .navbar-nav {
      margin-left: auto;
    }

    .ads-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .ad-card {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border: 2px solid #003366;
    }

    .ad-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .ad-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .ad-content {
      padding: 15px;
      text-align: center;
    }

    .ad-title {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 5px;
      color: #003366;
    }

    .ad-price {
      font-size: 1.1rem;
      font-weight: bold;
      color: #003366;
    }

    .ad-location {
      font-size: 0.9rem;
      color: gray;
      margin-top: 5px;
    }

    .ad-actions {
      text-align: center;
      margin-top: 10px;
    }

    .btn-delete {
      background-color: #003366;
      color: white;
      padding: 8px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .btn-delete:hover {
      background-color: blue;
    }

    .logout-link {
      color: white;
      font-size: 14px;
      text-decoration: none;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background 0.3s;
    }

    .logout-link:hover {
      font-weight: bold;
      background-color: #ddd !important;
      color: #003366 !important;
      cursor: p;
    }

    .footer {
      background-color: #003366;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: 30px;
    }

  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="#">Admin Panel - Autoshop.ba</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/admin/homepage">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/users">Users</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/ads">Ads</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/reports">Reports</a></li>
        <li class="nav-item"><a class="btn logout-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<main class="container mt-4">
  <h3 class="text-left ">Ads Management</h3>
  <div class="ads-container">
    <% for (let i = 0; i < ads.length; i++) { %>
      <div class="ad-card">
        <img src="<%= ads[i].image_url %>" alt="Car Image" class="ad-image">
        <div class="ad-content">
          <p class="ad-title"><%= ads[i].title %></p>
          <p class="ad-price"><%= ads[i].price %> KM</p>
          <p class="ad-location">üìç <%= ads[i].location || 'Unknown location' %></p>
          <div class="ad-actions">
            <button class="btn-delete btn-sm" onclick="deleteAd('<%= ads[i].ad_id %>')">Delete</button>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</main>

<footer class="footer">
  <p>&copy; 2025 Autoshop.ba | Developed by Emir Babaƒçiƒá</p>
</footer>

<script>


    function deleteAd(id) {
    if (confirm("Are you sure you want to delete this ad?")) {
      var xhr = new XMLHttpRequest();
      xhr.open("DELETE", `/admin/ads/delete/${id}`, true);
      xhr.setRequestHeader("Content-Type", "application/json");

      xhr.onreadystatechange = function () {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            alert("Ad deleted successfully");
            location.reload();
          } else {
            alert("Error deleting ad");
          }
        }
      };

      xhr.send();
    }
  }
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>


