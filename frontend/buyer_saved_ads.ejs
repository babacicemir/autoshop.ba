<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Autoshop.ba - My Ads</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .navbar {
      background-color: #007bff;
    }

    .navbar-brand {
      font-size: 1.6rem;
      font-weight: bold;
      color: white !important;
    }

    .navbar-nav {
      margin-left: auto;
    }

    main {
      flex: 1;
      padding: 20px 0;
    }

    .ads-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .ad-card {
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      border: 2px solid #007bff;
    }

    .ad-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .ad-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .ad-content {
      padding: 15px;
      text-align: center;
    }

    .ad-title {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 5px;
      color: #007bff;
    }

    .ad-price {
      font-size: 1.1rem;
      font-weight: bold;
      color: #007bff;
    }

    .ad-side-informations {
      font-size: 0.9rem;
      color: gray;
      margin-top: 10px;
      display: flex;
      flex-direction: column;
      gap: 5px;
    }

    .ad-side-informations .info-item {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .ad-side-informations .info-item i {
      color: #007bff;
      font-size: 1rem;
    }

    .ad-actions {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-top: 15px;
    }

    .btn-delete {
      padding: 8px 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background-color 0.3s, color 0.3s;
      background-color: #007bff;
      color: white;
    }

   

    .btn-delete:hover {
      background-color: #0056b3;
    }

    .logout-link {
      color: white;
      font-size: 14px;
      text-decoration: none;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background 0.3s;
    }

    .logout-link:hover {
      font-weight: bold;
      background-color: #ddd !important;
      color: #007bff !important;
      cursor: pointer;
    }

    .footer {
      background-color: #007bff;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: auto;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a class="navbar-brand" href="#">Autoshop.ba</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/buyer/welcome">Home</a></li>
        <li class="nav-item"><a class="nav-link " href="/buyer/homepage">Ads</a></li>
        <li class="nav-item"><a class="nav-link active" href="">Saved Ads</a></li>
        <li class="nav-item"><a class="btn logout-link" href="/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<main class="container">
  <div class="ads-container">
    <% for (let i = 0; i < ads.length; i++) { %>
      <div class="ad-card">
        <img src="<%= ads[i].image_url %>" alt="Car Image" class="ad-image">
        <div class="ad-content">
          <p class="ad-title"><%= ads[i].title %></p>
          <p class="ad-price"><%= ads[i].price %> KM</p>
          <div class="ad-side-informations">
            <div class="info-item">
              <i class="fas fa-info-circle"></i>
              <span> <%= ads[i].status %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-calendar-alt"></i>
              <span> <%= ads[i].year %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-map-marker-alt"></i>
              <span> <%= ads[i].location || 'Unknown location' %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-clock"></i>
              <span><%= new Date(ads[i].ad_date).toLocaleDateString('en-GB') %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-calendar-alt"></i>
              <span>Saved date: <%= new Date(ads[i].ad_saved_date).toLocaleDateString('en-GB') %></span>
            </div>
          </div>
          <div class="ad-actions">
            <button class="btn btn-delete" onclick="deleteAd('<%= ads[i].saved_ad_id %>')">Delete</button>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</main>

<footer class="footer">
  <p>&copy; 2025 Autoshop.ba | Developed by Emir Babačić</p>
</footer>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  function deleteAd(adId) {
    if (confirm(`Are you sure you want to delete this ad?`)) {
      $.ajax({
        url: `/buyer/ad/saved/delete/${adId}`,
        type: "DELETE",
        success: function () {
          alert(`Ad deleted successfully!`);
          location.reload(); 
        },
        error: function () {
          alert(`Failed to deleted ad.`);
        }
      });
    }
  }
</script>

</body>
</html>